pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
    }

    stages {
        stage('Setup') {
            steps {
                script {
                    if (!fileExists("${env.WORKSPACE}\\${VIRTUAL_ENV}")) {
                        bat "python -m venv %VIRTUAL_ENV%"
                    }
                    bat """
                        call %VIRTUAL_ENV%\\Scripts\\activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    """
                }
            }
        }

        stage('Lint') {
            steps {
                script {
                    bat """
                        call %VIRTUAL_ENV%\\Scripts\\activate
                        flake8 app.py
                    """
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    bat """
                        call %VIRTUAL_ENV%\\Scripts\\activate
                        pytest
                    """
                }
            }
        }

        stage('Coverage') {
            steps {
                script {
                    bat """
                        call %VIRTUAL_ENV%\\Scripts\\activate
                        coverage run -m pytest
                        coverage report -m
                        coverage html
                    """
                }
            }
        }

        stage('Security Scan') {
            steps {
                script {
                    bat """
                        call %VIRTUAL_ENV%\\Scripts\\activate
                        bandit -r .
                    """
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    bat """
                        call %VIRTUAL_ENV%\\Scripts\\activate
                        if not exist deploy mkdir deploy
                        copy app.py deploy\\
                        echo Application deployed locally to .\\deploy
                    """
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}

